<%= form_for [@question, answer] do |f| %>
  <%= f.label :answer_text, answer.answer_text %></li>
  <%= link_to "(remove)", question_answer_path(@question, answer), method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
  <%= link_to "best answer", question_answer_path(@question, answer), class: "bestanswerchoice", method: :patch, remote: true %>
<% end %>
