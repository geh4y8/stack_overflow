<%= form_for [@question, answer] do |f| %>
  <li><%= f.label :answer_text, answer.answer_text %></li>
  <%= link_to "(remove)", question_answer_path(@question, @answer), method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
  <%= link_to "best answer", question_bestanswers_path(@question,@answer, @bestanswer), method: :post, remote: true %>
<% end %>
